        </Expander>
        <StatusBar HorizontalAlignment="Left" Height="29" Grid.Row="2" VerticalAlignment="Bottom" Width="517">
            <Label Content="Renato Carvalho"/>
        </StatusBar>
    </Grid>
</Window>
